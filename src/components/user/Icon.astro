---
import { Icon as AstroIcon } from 'astro-icon/components';

interface Props {
  name: string;
  size?:
    | string
    | {
        width: string;
        height: string;
      };
}

const { name, size } = Astro.props;
let width = '1.25em';
let height = '1.25em';
if (size) {
  if (typeof size === 'string') {
    width = size;
    height = size;
  } else {
    width = size.width;
    height = size.height;
  }
}
---

<AstroIcon
  name={name}
  class="inline align-text-bottom"
  width={width}
  height={height}
  is:inline
/>
